@{
    ViewData["Title"] = "Home Page";
}
@using QuotingDojo.Models
@model Quote

<div class="text-center">
    <h1 class="display-4">Favorite Verses!</h1>
</div>
<div class="container">
    @foreach (var item in @ViewBag.Verses)
    {
        <div class="container border m-3 p-5">
            <h1>"@item.UserQuote"</h1>
            <h3 class="text-center border-top">@item.Name, created at @item.CreatedAt</h3>
        </div>
    }
    <div class="col text-center"><a href="/"><button type="submit" class="btn btn-primary">Submit a Quote</button></a></div>

</div>